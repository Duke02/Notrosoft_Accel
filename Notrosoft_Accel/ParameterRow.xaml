<UserControl x:Class="Notrosoft_Accel.ParameterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Notrosoft_Accel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Label Content="{Binding  ParameterName}" />
            <!-- <Label>Hi is this thing on?</Label> -->
            <TextBlock Text="{Binding ParameterValue}" Background="Khaki"/>
        </StackPanel>
    </Grid>
</UserControl>