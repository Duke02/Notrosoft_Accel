<Window x:Class="Notrosoft_Accel.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notrosoft_Accel"
        mc:Ignorable="d"
        Title="Notrosoft Accel" Height="600" Width="1080" Loaded="Window_Loaded">

    
        <Grid>

         <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="70,70,0,0" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition MinWidth="50" MaxWidth="200"/>
                <ColumnDefinition Width="1" />
            </Grid.ColumnDefinitions>


                <DataGrid x:Name="Data" AlternatingRowBackground="LightGray" CanUserReorderColumns="False" 
                      CanUserResizeColumns="False" CanUserSortColumns="False" MinColumnWidth="50" 
                      GridLinesVisibility="All" HeadersVisibility="All" Cursor="IBeam" ScrollViewer.CanContentScroll="True"
                      IsSynchronizedWithCurrentItem="False"  Grid.Column="0" Grid.Row="1"
                      ScrollViewer.VerticalScrollBarVisibility="Visible" 
                      ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                      VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" EnableRowVirtualization="False" AreRowDetailsFrozen="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" LoadingRow="Data_LoadingRow"
                      >
                </DataGrid>

                <Button x:Name="addColumnButton" Grid.Column="1" Grid.Row="0" 
                        Content="Add Column" Click="addColumnButton_Click" MaxWidth="200" />
            <TextBlock Text="This is where all the output will go
                       Next line test
                       and tabs or something idk" FontSize="10" Grid.Column="1"
                       Grid.Row="1" Name="outputTextBlock" TextWrapping="Wrap" MaxWidth="200" />


        </Grid>
        
        <Grid Background="#FF2BC5E8" HorizontalAlignment="Stretch" 
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            
            <TextBlock Grid.Column="0" Grid.Row="0" Text="File" FontSize="30" Margin="5,0,5,0"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="Graph" FontSize="30" Margin="5,0,5,0"/>
            <Button Grid.Column="2" Grid.Row="0" Content="Statistics" FontSize="20" Margin="5,0,5,0"
                    x:Name="StatsButton" Click="StatsButton_Click"/>
            
        </Grid>

    </Grid>
    
</Window>
