<Window x:Class="Notrosoft_Accel.ParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Notrosoft_Accel"
        MinHeight="300"
        MinWidth="400"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="ParameterDialog" Height="450" Width="800">
    <Grid Name="Grid" Width="Auto" Height="Auto">
        <!-- <Grid.RowDefinitions> -->
        <!--     ~1~ <RowDefinition Height="1"/> @1@ -->
        <!--     <RowDefinition Height="*" /> -->
        <!--     <RowDefinition Height="1" /> -->
        <!-- </Grid.RowDefinitions> -->
        <!-- -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" Name="OkButton" Click="OkButton_OnClick" IsDefault="True" MinWidth="100" MinHeight="30">OK</Button>
        <Button  Grid.Column="2" Name="CancelButton" IsCancel="True" MinWidth="100" MinHeight="30">Cancel</Button>
    </Grid>
</Window>